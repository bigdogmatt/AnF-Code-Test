<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

    <style name="topDescriptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/largeMargin</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">@dimen/letterSpacingMed</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/smallMargin</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="promoMessageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/smallMargin</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">@dimen/letterSpacingMed</item>
    </style>

    <style name="bottomDescriptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/largeMargin</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">@dimen/largeMargin</item>
        <item name="android:layout_marginBottom">@dimen/smallMargin</item>
        <item name="android:layout_marginRight">@dimen/largeMargin</item>
        <item name="android:layout_marginLeft">@dimen/largeMargin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:letterSpacing">@dimen/letterSpacingMed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:buttonCornerRadius">2px</item>
    </style>

</resources>